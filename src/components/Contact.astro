---
// Kontakt-Sektion mit Formspree-Formular
// Formspree: Ersetze YOUR_FORM_ID mit deiner echten Form-ID von formspree.io
const formspreeId = "meoykgve";
---

<section id="kontakt" class="relative bg-white py-20 lg:py-28" data-animate>
  <!-- Angled top edge -->
  <div class="absolute top-0 left-0 right-0 h-16 bg-sand transform -skew-y-2 origin-top-right -translate-y-8"></div>

  <div class="max-w-7xl mx-auto px-6 lg:px-12">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
      <!-- Info -->
      <div>
        <span class="inline-block text-primary font-headline text-sm uppercase tracking-widest mb-4">
          Kontakt
        </span>
        <h2 class="text-3xl sm:text-4xl lg:text-5xl text-dark mb-6">
          Lass uns reden.
        </h2>
        <p class="text-lg text-gray mb-8 leading-relaxed">
          Was beschäftigt dich in Straubing? Was läuft gut, was muss sich ändern?
          Ich lese jede Nachricht persönlich – und antworte auch.
        </p>

        <!-- Direkte Kontaktdaten -->
        <div class="space-y-4">
          <a
            href="mailto:info@guggeis-it.de"
            class="flex items-center gap-4 text-gray hover:text-primary transition-colors group"
          >
            <span class="w-12 h-12 bg-sand group-hover:bg-primary/10 flex items-center justify-center transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </span>
            <span>info@guggeis-it.de</span>
          </a>

          <a
            href="tel:+49015146523225"
            class="flex items-center gap-4 text-gray hover:text-primary transition-colors group"
          >
            <span class="w-12 h-12 bg-sand group-hover:bg-primary/10 flex items-center justify-center transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </span>
            <span>0151 46523225</span>
          </a>

          <a
            href="https://instagram.com/jguggeis"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-4 text-gray hover:text-primary transition-colors group"
            aria-label="@jguggeis auf Instagram"
          >
            <span class="w-12 h-12 bg-sand group-hover:bg-primary/10 flex items-center justify-center transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" />
              </svg>
            </span>
            <span>@jguggeis</span>
          </a>
        </div>
      </div>

      <!-- Formular -->
      <div class="bg-sand p-6 lg:p-8">
        <form
          action={`https://formspree.io/f/${formspreeId}`}
          method="POST"
          class="space-y-6"
        >
          <div>
            <label for="name" class="block text-sm font-medium text-dark mb-2">
              Name <span aria-label="erforderlich">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              aria-required="true"
              autocomplete="name"
              class="w-full px-4 py-3 bg-white border-0 text-dark placeholder-gray/50 focus:ring-2 focus:ring-primary focus:outline-none"
              placeholder="Dein Name"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-dark mb-2">
              E-Mail <span aria-label="erforderlich">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              aria-required="true"
              autocomplete="email"
              class="w-full px-4 py-3 bg-white border-0 text-dark placeholder-gray/50 focus:ring-2 focus:ring-primary focus:outline-none"
              placeholder="deine@email.de"
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-dark mb-2">
              Nachricht <span aria-label="erforderlich">*</span>
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              aria-required="true"
              class="w-full px-4 py-3 bg-white border-0 text-dark placeholder-gray/50 focus:ring-2 focus:ring-primary focus:outline-none resize-none"
              placeholder="Was möchtest du mir sagen?"
            ></textarea>
          </div>

          <!-- Honeypot für Spam-Schutz (versteckt für Screenreader) -->
          <input type="text" name="_gotcha" class="sr-only" tabindex="-1" autocomplete="off" aria-hidden="true" />

          <button
            type="submit"
            class="btn btn-primary w-full"
          >
            Nachricht senden
          </button>

          <p class="text-xs text-gray text-center">
            Mit dem Absenden erklärst du dich mit der Verarbeitung deiner Daten gemäß unserer
            <a href="/datenschutz" class="text-primary hover:underline">Datenschutzerklärung</a> einverstanden.
          </p>
        </form>
      </div>
    </div>
  </div>
</section>
