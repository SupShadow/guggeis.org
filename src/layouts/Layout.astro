---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const {
  title,
  description = "Julian Guggeis - Mutig f端r Straubing. SPD Kandidat f端r die Kommunalwahl 2026.",
  image = "/og-image.jpg"
} = Astro.props;

const ogImageURL = new URL(image, Astro.site);
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="description" content={description} />
    <meta name="author" content="Julian Guggeis" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Google Fonts: Archivo Black (Headlines) + Inter (Body) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Open Graph / Social Media -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:site_name" content="Julian Guggeis - Mutig f端r Straubing" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <title>{title}</title>

    <!-- Structured Data (Schema.org) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Julian Guggeis",
      "jobTitle": "SPD Kandidat Kommunalwahl 2026",
      "url": "https://guggeis.org",
      "sameAs": [
        "https://instagram.com/jguggeis"
      ],
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Straubing",
        "addressRegion": "Bayern",
        "addressCountry": "DE"
      },
      "affiliation": {
        "@type": "PoliticalParty",
        "name": "SPD",
        "url": "https://www.spd.de"
      }
    })} />

    <!-- Global Styles -->
    <style is:global>
      @import '../styles/global.css';
    </style>
  </head>
  <body class="min-h-screen flex flex-col pb-[calc(4rem+env(safe-area-inset-bottom))] lg:pb-0">
    <!-- Skip Link f端r Tastatur-Navigation -->
    <a href="#main-content" class="skip-link">
      Zum Hauptinhalt springen
    </a>
    <slot />

    <!-- Sticky Mobile CTA - nur auf Mobile sichtbar -->
    <div
      class="fixed bottom-0 left-0 right-0 p-4 bg-sand/95 backdrop-blur-sm border-t border-dark/10 lg:hidden z-30"
      style="padding-bottom: calc(1rem + env(safe-area-inset-bottom))"
    >
      <a href="#mitmachen" class="btn btn-primary w-full text-center justify-center">
        Jetzt mitmachen
      </a>
    </div>
  </body>
</html>
