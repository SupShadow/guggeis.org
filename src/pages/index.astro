---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import OriginStory from '../components/OriginStory.astro';
import RealityCheck from '../components/RealityCheck.astro';
import Wahlhilfe from '../components/Wahlhilfe.astro';
import Fahrplan from '../components/Fahrplan.astro';
import Topics from '../components/Topics.astro';
import AboutMe from '../components/AboutMe.astro';
import VideoSection from '../components/VideoSection.astro';
import Manifest from '../components/Manifest.astro';
import Testimonials from '../components/Testimonials.astro';
import FaqSection from '../components/FaqSection.astro';
import FragJulian from '../components/FragJulian.astro';
import Events from '../components/Events.astro';
import Contact from '../components/Contact.astro';
import JoinUs from '../components/JoinUs.astro';
import Newsletter from '../components/Newsletter.astro';
import Footer from '../components/Footer.astro';
import ShareButtons from '../components/ShareButtons.astro';
---

<Layout
  title="Julian Guggeis | Stadtrat Straubing 2026 | SPD"
  description="Julian Guggeis kandidiert für den Stadtrat Straubing 2026. Schwerpunkte: bezahlbares Wohnen, bessere Mobilität und eine lebendige Innenstadt."
>
  <Header />
  <main id="main-content">
    <Hero />
    <OriginStory />
    <section id="fakten" class="bg-white py-10 sm:py-12" data-animate>
      <div class="max-w-5xl mx-auto px-6 lg:px-12">
        <div class="bg-sand/70 border-l-4 border-primary p-5 sm:p-6">
          <h2 class="sr-only">Fakten kurz & klar</h2>
          <p class="text-xs text-primary font-headline uppercase tracking-widest mb-3">
            Fakten kurz & klar
          </p>
          <ul class="text-sm sm:text-base text-gray grid gap-3 sm:grid-cols-2">
            <li><strong class="text-dark">Wahltermin:</strong> 8. M&#228;rz 2026 (Kommunalwahl Bayern)</li>
            <li><strong class="text-dark">Kandidat:</strong> Julian Guggeis, SPD Straubing</li>
            <li><strong class="text-dark">SPD-Listenplatz:</strong> 11 (Stadtrat Straubing)</li>
            <li><strong class="text-dark">Wahlhilfe:</strong> Kumulieren &amp; Panaschieren m&#246;glich (1&#8211;3 Stimmen)</li>
            <li><strong class="text-dark">Schwerpunkte:</strong> Wohnen, Bildung, Mobilit&#228;t, Innenstadt, Sicherheit, Klima</li>
            <li><strong class="text-dark">Wahlprogramm:</strong> <a href="/wahlprogramm" class="text-primary hover:underline">Kurzfassung &amp; Downloads</a></li>
          </ul>
          <p class="text-xs text-gray/70 mt-4">
            Mehr unter <a href="/facts" class="text-primary hover:underline">Fakten</a>.
          </p>
        </div>
      </div>
    </section>
    <RealityCheck />
    <Wahlhilfe />
    <Fahrplan />
    <Topics />
    <AboutMe />
    <VideoSection />
    <Manifest />
    <Testimonials />
    <FaqSection />
    <FragJulian />
    <Events />
    <Contact />
    <JoinUs />
    <Newsletter />
  </main>
  <Footer />
  <ShareButtons />
</Layout>
