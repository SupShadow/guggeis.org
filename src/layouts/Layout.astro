---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const {
  title,
  description = "Julian Guggeis - Mutig für Straubing. SPD Kandidat für die Kommunalwahl 2026.",
  image = "/og-image.jpg"
} = Astro.props;

const ogImageURL = new URL(image, Astro.site);
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="description" content={description} />
    <meta name="author" content="Julian Guggeis" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#E3001B" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />

    <!-- Google Fonts: Archivo Black (Headlines) + Inter (Body) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Open Graph / Social Media -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:site_name" content="Julian Guggeis - Mutig für Straubing" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <title>{title}</title>

    <!-- Structured Data (Schema.org) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Julian Guggeis",
      "jobTitle": "SPD Kandidat Kommunalwahl 2026",
      "url": "https://guggeis.org",
      "sameAs": [
        "https://instagram.com/jguggeis"
      ],
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Straubing",
        "addressRegion": "Bayern",
        "addressCountry": "DE"
      },
      "affiliation": {
        "@type": "PoliticalParty",
        "name": "SPD",
        "url": "https://www.spd.de"
      }
    })} />

    <!-- Global Styles -->
    <style is:global>
      @import '../styles/global.css';
    </style>
  </head>
  <body class="min-h-screen flex flex-col pb-[calc(4rem+env(safe-area-inset-bottom))] lg:pb-0">
    <!-- Scroll Progress Bar -->
    <div
      id="scroll-progress"
      class="fixed top-16 lg:top-20 left-0 h-[3px] bg-primary z-50 transition-all duration-75"
      style="width: 0%"
    ></div>

    <!-- Skip Link für Tastatur-Navigation -->
    <a href="#main-content" class="skip-link">
      Zum Hauptinhalt springen
    </a>
    <slot />

    <!-- WhatsApp Floating Button - Mobile -->
    <a
      href="https://wa.me/4915146523225?text=Hallo%20Julian%2C%20ich%20interessiere%20mich%20für%20deine%20Kampagne!"
      target="_blank"
      rel="noopener noreferrer"
      class="fixed bottom-20 right-4 w-14 h-14 bg-[#25D366] text-white flex items-center justify-center shadow-lg hover:bg-[#20bd5a] active:scale-95 transition-all lg:hidden z-40"
      style="bottom: calc(5rem + env(safe-area-inset-bottom))"
      aria-label="Über WhatsApp kontaktieren"
    >
      <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
    </a>

    <!-- Sticky Mobile CTA - nur auf Mobile sichtbar -->
    <div
      class="fixed bottom-0 left-0 right-0 p-4 bg-sand/95 backdrop-blur-sm border-t border-dark/10 lg:hidden z-30"
      style="padding-bottom: calc(1rem + env(safe-area-inset-bottom))"
    >
      <a href="#mitmachen" class="btn btn-primary w-full text-center justify-center">
        Jetzt mitmachen
      </a>
    </div>

    <!-- Back to Top Button - entfernt wegen UI-Problemen -->

    <!-- Scroll Animation Script -->
    <script>
      // Intersection Observer für Scroll-Animationen
      const animateElements = document.querySelectorAll('[data-animate], [data-animate-stagger]');

      if (animateElements.length > 0) {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('animate-in');
              observer.unobserve(entry.target);
            }
          });
        }, {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        });

        animateElements.forEach(el => observer.observe(el));
      }

      // Scroll Progress Bar
      const scrollProgress = document.getElementById('scroll-progress');
      if (scrollProgress) {
        window.addEventListener('scroll', () => {
          const scrollTop = window.scrollY;
          const docHeight = document.documentElement.scrollHeight - window.innerHeight;
          const progress = (scrollTop / docHeight) * 100;
          scrollProgress.style.width = `${Math.min(progress, 100)}%`;
        }, { passive: true });
      }

      // Active Nav State
      const sections = document.querySelectorAll('section[id]');
      const navLinks = document.querySelectorAll('.nav-link');

      if (sections.length > 0 && navLinks.length > 0) {
        const navObserver = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              const id = entry.target.getAttribute('id');
              navLinks.forEach(link => {
                const href = link.getAttribute('href');
                if (href === `#${id}`) {
                  link.classList.add('nav-active');
                } else {
                  link.classList.remove('nav-active');
                }
              });
            }
          });
        }, {
          threshold: 0.3,
          rootMargin: '-20% 0px -60% 0px'
        });

        sections.forEach(section => navObserver.observe(section));
      }
    </script>
  </body>
</html>
