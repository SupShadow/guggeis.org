---
import ExitIntentPopup from '../components/ExitIntentPopup.astro';
import ChatWidget from '../components/ChatWidget.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  ogType?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const {
  title,
  description = "Julian Guggeis - Mutig für Straubing. SPD Kandidat für die Kommunalwahl 2026.",
  image = "/og-image.jpg",
  ogType = "website"
} = Astro.props;

const ogImageURL = new URL(image, Astro.site);
const ogImageType = image.endsWith('.png')
  ? 'image/png'
  : image.endsWith('.svg')
    ? 'image/svg+xml'
    : 'image/jpeg';
const siteBase = Astro.site?.toString().replace(/\/$/, '') ?? 'https://guggeis.org';
const personId = `${siteBase}/#person`;
const webSiteId = `${siteBase}/#website`;
const webPageId = `${canonicalURL}#webpage`;
const ogImageAlt = "Julian Guggeis - Mutig für Straubing";
const isHome = Astro.url.pathname === '/';
const bodyClass = isHome
  ? "min-h-screen flex flex-col pb-[calc(4rem+env(safe-area-inset-bottom))] lg:pb-0"
  : "min-h-screen flex flex-col";
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="author" content="Julian Guggeis" />
    <meta name="generator" content={Astro.generator} />
    <meta name="geo.region" content="DE-BY" />
    <meta name="geo.placename" content="Straubing" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    <link rel="alternate" href={canonicalURL} hreflang="de-DE" />

    <!-- Favicon & PWA -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/icons/icon-192x192.png" />
    <link rel="manifest" href="/manifest.json" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#E3001B" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />

    <!-- Inter Font: Lokal via @fontsource (kein externer Request, DSGVO-konform) -->

    <!-- Open Graph / Social Media -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:secure_url" content={ogImageURL} />
    <meta property="og:image:type" content={ogImageType} />
    <meta property="og:image:alt" content={ogImageAlt} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:site_name" content="Julian Guggeis - Mutig für Straubing" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@jguggeis" />
    <meta name="twitter:creator" content="@jguggeis" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    <meta name="twitter:image:alt" content={ogImageAlt} />

    <title>{title}</title>

    <!-- Structured Data (Schema.org) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "PoliticalCandidate",
          "@id": personId,
          "name": "Julian Guggeis",
          "jobTitle": "Stadtratskandidat 2026 (SPD Straubing)",
          "url": siteBase,
          "image": ogImageURL,
          "email": "mailto:info@guggeis-it.de",
          "telephone": "+49 151 46523225",
          "knowsAbout": [
            "Bezahlbares Wohnen",
            "Bildung und Betreuung",
            "Mobilit\u00e4t und \u00d6PNV",
            "Innenstadt",
            "Sicherheit",
            "Klima und Umwelt",
            "Soziale Gerechtigkeit"
          ],
          "sameAs": [
            "https://instagram.com/jguggeis"
          ],
          "address": {
            "@type": "PostalAddress",
            "addressLocality": "Straubing",
            "addressRegion": "Bayern",
            "addressCountry": "DE"
          },
          "affiliation": {
            "@type": "PoliticalParty",
            "name": "SPD",
            "url": "https://www.spd.de"
          },
          "memberOf": {
            "@type": "Organization",
            "name": "SPD Straubing"
          }
        },
        {
          "@type": "WebSite",
          "@id": webSiteId,
          "url": siteBase,
          "name": "Julian Guggeis - Mutig für Straubing",
          "inLanguage": "de-DE",
          "publisher": {
            "@id": personId
          }
        },
        {
          "@type": "WebPage",
          "@id": webPageId,
          "url": canonicalURL,
          "name": title,
          "description": description,
          "inLanguage": "de-DE",
          "isPartOf": {
            "@id": webSiteId
          },
          "about": {
            "@id": personId
          },
          "primaryImageOfPage": {
            "@type": "ImageObject",
            "url": ogImageURL
          }
        }
      ]
    })} />

    <!-- Global Styles -->
    <style is:global>
      @import '../styles/global.css';
    </style>
  </head>
  <body class={bodyClass}>
    {isHome && (
      <div
        id="scroll-progress"
        class="fixed top-16 lg:top-20 left-0 h-[3px] bg-primary z-50 transition-all duration-75"
        style="width: 0%"
