---
import HeroMotion from './hero/HeroMotion';
import { getImage } from 'astro:assets';
import julianRede from '../assets/julian-rede.jpg';

// Optimize image at build time
const optimizedImage = await getImage({
  src: julianRede,
  width: 1200,
  format: 'webp'
});
---

<HeroMotion
  client:load
  candidateImageSrc={optimizedImage.src}
/>

<style>
  /* Mobile diagonal clip for hero image */
  :global(.hero-image-clip) {
    clip-path: polygon(0 0, 100% 0, 100% calc(100% - 4vw), 0 100%);
  }

  @media (min-width: 1024px) {
    :global(.hero-image-clip) {
      clip-path: polygon(15% 0, 100% 0, 100% 100%, 0 100%);
    }
  }
</style>
